{% extends 'Front.html.twig' %}

{% block title %}Reservation{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .custom-text-color {
            color: black !important;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="container mt-5">
        <div class="card border-0 shadow-lg">
            <div class="card-header bg-primary text-white text-center">
                <h2 class="card-title mb-0">Reservation Details</h2>
            </div>
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ reservation.id }}</td>
                        </tr>
                        <tr>
                            <th>Date de Reservation</th>
                            <td>{{ reservation.dateDeReservation ? reservation.dateDeReservation|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Number of Tickets</th>
                            <td>{{ reservation.nombreTicket }}</td>
                        </tr>
                        <tr>
                            <th>Reservation Status</th>
                            <td>{{ reservation.statutReservation }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <a href="{{ path('app_reservation_index') }}" class="btn btn-secondary btn-block">Back to List</a>
                    </div>
                    <div class="col-md-6">
                        <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-primary btn-block">Edit</a>
                    </div>
                    <div class="col-md-6">
                        {{ include('reservation/_delete_form.html.twig') }}
                    </div>
                </div>

               
            </div>
        </div>
    </div>
{% endblock %}