{% extends 'Front.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-lg">
                    <div class="card-header bg-primary text-white text-center">
                        <h2 class="card-title mb-0">Ticket Details</h2>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ ticket.id }}</td>
                                </tr>
                                <tr>
                                    <th>Seat Number</th>
                                    <td>{{ ticket.NumSiege }}</td>
                                </tr>
                                <tr>
                                    <th>Price</th>
                                    <td>{{ ticket.prix }}</td>
                                </tr>
                                <tr>
                                    <th>Event Date</th>
                                    <td>{{ ticket.dateEvenement ? ticket.dateEvenement|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>{{ ticket.statutTicket }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-center">
                        <a href="{{ path('app_ticket_index') }}" class="btn btn-secondary mx-2">Back to List</a>
                        <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}" class="btn btn-primary mx-2">Edit</a>
                        {{ include('ticket/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}