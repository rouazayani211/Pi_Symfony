
{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-dark text-white">
                    <h3 class="mb-0">Détails de l'événement</h3>
                </div>
                <div class="card-body bg-light">
                        <p class="card-text">Nom : {{ evenement.nom }}</p>
                    
                    <p class="card-text">
                        <strong>Date :</strong> {{ evenement.date ? evenement.date|date('Y-m-d') : 'Non spécifiée' }}
                    </p>
                    <p class="card-text">
                        <strong>Prix :</strong> {{ evenement.prix ? evenement.prix ~ '€' : 'Gratuit' }}
                    </p>
                    <a href="{{ path('app_evenementF_index') }}" class="btn btn-outline-secondary">Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
