{% extends 'index.html.twig' %}



{% block title %}Evenement{% endblock %}

{% block body %}

<div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px;">

    <div class="col-lg-6">
        <h2>Details :</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ evenement.nom }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ evenement.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_evenement_index') }}" class="btn btn-secondary">Back to list</a>
    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-primary">Edit</a>
            
    {{ include('evenement/_delete_form.html.twig') }}


{% endblock %}

