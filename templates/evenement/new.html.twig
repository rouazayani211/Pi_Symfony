{% extends 'index.html.twig' %}

{% block title %}New Evenement{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
        <br>
            <h1 class="text-center mb-4">Create new Evenement</h1>
            {{ form_start(form) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.date) }}
            {{ form_row(form.prix) }}
            <div class="text-center mt-4">
                <button class="btn btn-success">Save</button>
                <a href="{{ path('app_evenement_index') }}" class="btn btn-outline-secondary ml-2">Back to list</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
