{% extends 'Front.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4 text-center">Liste des Événements :</h2>
    <div class="row">
        {% if evenements|length > 0 %}
            {% for evenement in evenements %}
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <p class="card-title"> Nom :{{ evenement.nom }}</p>
                            <p class="card-text">Date : {{ evenement.date ? evenement.date|date('Y-m-d') : 'Non spécifiée' }}</p>
                            <p class="card-text">Prix : {{ evenement.prix }}€</p>
                            <a href="{{ path('app_evenementF_show', {'id': evenement.id}) }}" class="btn btn-primary mt-auto">Voir plus</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-12">
                <p class="text-center">Aucun événement trouvé.</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
