{% extends 'produit/back/base.html.twig' %}
{% block body %}
<main id="main" class="main">
    <section class="section">
      <div class="row">
        <div class="col-lg-11">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">View Commands added</h5>

              <!-- Default Table -->
              <table class="table" id="dataTable">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Date</th>
                    <th scope="col">Mode Payement</th>
                    <th scope="col">Adresse</th>
                    {# <th scope="col">Product Id</th> #}
                    <th scope="col"><h5>Update</h5></th>
                    <th scope="col"><h5>Delete</h5></th>
                  </tr>
                </thead>
                 {% for commande in commande %}
                <tbody>
                  <tr class="event-row">

                    <td>{{commande.getId}}</td>
                    <td>{{ commande.date|date('Y-m-d') }}</td>
                    <td>{{ commande.modePayement }}</td>
                    <td>{{ commande.Adresse }}</td>
                    {# <td>{{commande.getProduit.getId}}</td> #}
                    <td>
                      <a href="{{ path('editcommande', {'id': commande.getId}) }}">
                          <button class="btn btn-primary"><i class="fas fa-pencil-alt"></i> Update Commande</button>
                      </a>
                  </td>
                    <td>
                         <a href="{{ path('deleteCommande', {'id': commande.getId}) }}">
                                <button class="btn btn-primary"><i class="fas fa-trash"></i> Delete Commande</button>
                         </a>
                    </td>
                    
                
                  </tr>

                     {% endfor %}
                  

                </div>
                
                       
                </tbody>
                  
              </table>
              <!-- End Default Table Example -->
              <a href="{{ path('app_event_exportcommande_excel') }}">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus"></i>import excel <!-- IcÃ´ne EXCLEl -->
                        </button>
                    </a>
            </div>
          </div>

          

        

          

        </div>

    
      </div>
    </section>

  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
    $(document).ready(function () {
        $('#example-search-input').on('input', function () {
            var searchQuery = $(this).val().toLowerCase();
            var noEventsRow = $('#noEventsRow');

            $('.event-row').each(function () {
                var eventRowText = $(this).text().toLowerCase();
                $(this).toggle(eventRowText.includes(searchQuery));
            });

            noEventsRow.toggle($('.event-row:visible').length === 0);
        });
    });
</script>
</main><!-- End #main -->
     {% endblock %}

