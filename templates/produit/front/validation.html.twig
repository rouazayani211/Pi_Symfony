{% extends 'produit/front/base.html.twig' %}

{% block title %}Add to Cart{% endblock %}

{% block body %}
 <style>
     
        .error {
    color: red; /* Couleur du texte */
    font-size: 14px; /* Taille de la police */
    font-weight: bold; /* Texte en gras */
}
        
    </style>

<div class="">
    <div class="card-header">
        <h1 class="card-title">Validate Your Order</h1>
    </div>
    <div class="card-body">
                          {{ form_start(f,{'attr': {'novalidate': 'novalidate'}} ) }}
        
        <div class="form-group">
           {{ form_label(f.Adresse, "Adresse") }}
            {{ form_widget(f.Adresse) }}
                     <div class="error">{{ form_errors(f.Adresse) }}</div>
        </div>
        <div class="form-group">
        {{ form_label(f.modePayement, "modePayement") }}
            {{ form_widget(f.modePayement) }}
                     <div class="error">{{ form_errors(f.modePayement) }}</div>
        </div>
        
        <button type="submit" class="btn btn-primary">Confirm Order</button>
        
        {{ form_end(f) }}
    </div>
</div>

{% endblock %}
