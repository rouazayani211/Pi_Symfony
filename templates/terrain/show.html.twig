{% extends 'index.html.twig' %}

{% block title %}Terrain{% endblock %}

{% block body %}
    <div class="row" style="display: flex; align-items: center; justify-content: center; margin-top: 150px;">
        <div class="col-lg-6">
            <h2>Terrain Details:</h2>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ terrain.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ terrain.nom }}</td>
                    </tr>
                    <tr>
                        <th>Localisation</th>
                        <td>{{ terrain.localisation }}</td>
                    </tr>
                    <tr>
                        <th>Capacite</th>
                        <td>{{ terrain.capacite }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('app_terrain_index') }}" class="btn btn-secondary">Back to list</a>
            <a href="{{ path('app_terrain_edit', {'id': terrain.id}) }}" class="btn btn-primary">Edit</a>

            {{ include('terrain/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}