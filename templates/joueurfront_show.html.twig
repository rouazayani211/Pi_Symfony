
{% extends 'Front.html.twig' %}


{% block title %} Joueur{% endblock %}

{% block body %}

    <!-- Hero section with background image -->
    <div class="hero overlay" style="background-image: url('{{ asset('images/bg_3.jpg') }}');">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-6 mx-auto text-center">
            <h1 class="text-white">Joueur Details</h1>
             <!-- Main content section -->
    <div class="container mt-5">
      <h2>{{ joueur.nom }}</h2>
      <p><strong>Prenom:</strong> {{ joueur.prenom }}</p>
      <p><strong>Age:</strong> {{ joueur.age }}</p>
      <p><strong>Numéro:</strong> {{ joueur.numero }}</p>
      <p><strong>Position:</strong> {{ joueur.position }}</p>
      <p><strong>IDEquipe:</strong> {{ joueur.id_Equipe }}</p>
       <a class="btn btn-primary" href="{{ path('app_joueur_summary_front', {'nom': joueur.nom}) }}">Voir le résumé</a>

    </div>
          </div>
        </div>
      </div>
    </div>

   

    <!-- Footer section -->
    <footer class="footer-section">
      <div class="container">
        <!-- Footer content -->
      </div>
    </footer>
  </div>

{% endblock %}
