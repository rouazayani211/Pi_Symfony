  <div class="site-wrap">
    <header class="site-navbar py-2" role="banner"> <!-- Reduced top padding -->
      <div class="container-fluid"> <!-- Changed to container-fluid for full-width -->
        <div class="d-flex align-items-center justify-content-between"> <!-- Changed alignment -->
