<!DOCTYPE html>
<html lang="en">
<head>
  <title>ScoreTrack</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Include all necessary stylesheets and scripts -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="{{ asset('fonts/icomoon/style.css') }}">
  <link rel="stylesheet" href="{{ asset('css/bootstrap/bootstrap.css') }}">
  <link rel="stylesheet" href="{{ asset('css/style.css') }}">
</head>

<body>
  <div class="site-wrap">
    <header class="site-navbar py-2" role="banner">
      <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between">
          <div class="site-logo" style="margin: 0; padding: 0;">
            <img src="{{ asset('images/logo20.png') }}" alt="Logo" style="width:200px; height:auto;">
          </div>
          <nav class="site-navigation position-relative text-right" role="navigation">
            <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
              <li><a href="{{ path('app_equipe_front') }}" class="nav-link">Equipes</a></li>
              <li class="active"><a href="{{ path('app_joueur_front') }}" class="nav-link">Joueurs</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </header>

    <div class="hero overlay" style="background-image: url('{{ asset('images/bg_3.jpg') }}');">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-10 mx-auto text-center">
            <h1 class="text-white">ScoreTrack - Joueurs</h1>
            
            <!-- Consistent Table Styling -->
            <table class="table table-striped table-bordered table-consistent" style="background-color: white;">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Nom</th>
                  <th scope="col">Prénom</th>
                  <th scope="col">Âge</th>
                  <th scope="col">Numéro</th>
                  <th scope="col">Position</th>
                  <th scope="col">Équipe</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                {% for joueur in joueurs %}
                  <tr>
                    <td>{{ joueur.nom }}</td>
                    <td>{{ joueur.prenom }}</td>
                    <td>{{ joueur.age }}</td>
                    <td>{{ joueur.numero }}</td>
                    <td>{{ joueur.position }}</td>
                    <td>{{ joueur.id_Equipe }}</td>
                    <td>
                      <a href="{{ path('app_joueur_show_front', { 'id': joueur.id }) }}" class="btn btn-info">View</a>
                    </td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="7">No records found</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
            
            <!-- Search Form and Sorting Button -->
            <div class="d-flex justify-content-between">
              <!-- Search form -->
              <form class="search-form d-flex align-items-center" method="GET" action="{{ path('app_joueur_front') }}">
                <input type="text" name="query" placeholder="Search" title="Enter search keyword" value="{{ currentQuery }}">
                <button type="submit" title="Search">Search</button>
              </form>
              
              <!-- Sort by Age button -->
              <a href="{{ path('app_joueur_front', { 'sort': 'age', 'direction': currentSortDirection == 'asc' ? 'desc' : 'asc', 'query': currentQuery }) }}" class="btn btn-secondary" title="Sort by Age">
                Sort by Age
              </a>
