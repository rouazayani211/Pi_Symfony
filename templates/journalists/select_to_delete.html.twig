{% extends 'base.html.twig' %}

{% block title %}Select Journalist to Delete{% endblock %}

{% block body %}
<style>
  /* Basic styling for the page */
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 20px;
  }

  /* Styling for the heading */
  h1 {
    text-align: center;
    font-size: 2em;
    margin-bottom: 20px;
  }

  /* Styling for the journalist list */
  ul {
    list-style: none;
    padding: 0;
  }

  li {
    margin-bottom: 10px;
  }

  /* Styling for the journalist name */
  li a {
    text-decoration: none;
    color: #007bff;
    font-weight: bold;
  }

  li a:hover {
    text-decoration: underline;
  }
</style>

<h1>Select Journalist to Delete</h1>

<ul>
  {% for journalist in journalists %}
    <li>
      {{ journalist.name }}
      <a href="{{ path('delete_journalist_confirm', {'id': journalist.id}) }}">Delete</a>
    </li>
  {% endfor %}
</ul>
{% endblock %}
