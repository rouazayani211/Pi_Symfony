{% extends 'base.html.twig' %}

{% block title %}Joueur index{% endblock %}

{% block body %}
    <h1>Joueur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>nom</th>
                <th>prenom</th>
                <th>age</th>
                <th>numero</th>
                <th>position</th>
                <th>idEquipe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for joueur in joueurs %}
            <tr>
                <td>{{ joueur.id}}</td>
                <td>{{ joueur.nom}}</td>
                <td>{{ joueur.prenom}}</td>
                <td>{{ joueur.age}}</td>
                <td>{{ joueur.numero}}</td>
                <td>{{ joueur.position}}</td>
                <td>{{ joueur.id_Equipe}}</td>
                
                <td>
                    <a href="{{ path('app_joueur_show', {'id': joueur.id}) }}">show</a>
                    <a href="{{ path('app_joueur_edit', {'id': joueur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_joueur_new') }}">Create new</a>
{% endblock %}
