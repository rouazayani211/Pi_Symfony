{% extends 'Front.html.twig' %}


{% block title %} Equipe{% endblock %}

{% block body %}


    <div class="hero overlay" style="background-image: url('{{ asset('images/bg_3.jpg') }}');">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-10 mx-auto text-center">
            <h1 class="text-white">ScoreTrack - Equipes</h1>

            <!-- Table for displaying team information -->
            <table class="table table-striped table-bordered" style="background-color: white;">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Nom</th>
                  <th scope="col">Region</th>
                  <th scope="col">Ligue</th>
                  <th scope="col">Classement</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                {% for equipe in equipes %}
                <tr>
                  <td>{{ equipe.nom }}</td>
                  <td>{{ equipe.region }}</td>
                  <td>{{ equipe.ligue }}</td>
                  <td>{{ equipe.classement }}</td>
                  <td>
                    <a href="{{ path('app_equipe_show_front', { 'idEquipe': equipe.idEquipe }) }}" class="btn btn-info">View</a>
                  </td>
                </tr>
                {% else %}
                <tr>
                  <td colspan="5">No records found</td>
                </tr>
                {% endfor %}
              </tbody>
            </table>

            <!-- Search form -->
            <form class="search-form d-flex align-items-center" method="GET" action="{{ path('app_equipe_front') }}">
              <input type="text" name="query" placeholder="Search" title="Enter search keyword">
              <button type="submit" title="Search"><i class="bi bi-search"></i>Search</button>
            </form>

            <!-- Button to sort by classement -->
            <a href="{{ path('app_equipe_front', { 'sort': 'classement', 'direction': currentSortDirection == 'asc' ? 'desc' : 'asc', 'query': currentQuery }) }}" class="btn btn-secondary">
              Sort by Classement
              {% if currentSortField == 'classement' %}
                {% if currentSortDirection == 'asc' %}
                  &uarr; <!-- Ascending -->
                {% else %}
                  &darr; <!-- Descending -->
                {% endif %}
              {% endif %}
            </a>
